<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- theme config metadata -->
    <type name="Magento\Theme\Model\Design\Config\MetadataProvider">
        <arguments>
            <argument name="metadata" xsi:type="array">
                <item name="breadcrumbs_enabled" xsi:type="array">
                    <item name="path" xsi:type="string">design/breadcrumbs/breadcrumbs_enabled</item>
                    <item name="fieldset" xsi:type="string">other_settings/breadcrumbs</item>
                </item>
            </argument>
        </arguments>
    </type>
</config>
